<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{htmlWebpackPlugin.options.title}}</title>

    {{#unless htmlWebpackPlugin.options.isDevelopment}}
    <!-- Google Analytics -->
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '{{htmlWebpackPlugin.options.analyticsId}}', 'auto');
        ga("send", "pageview");
    </script>
    <!-- End Google Analytics -->
    {{/unless}}

    <link rel="shortcut icon" type="image/png" href="favicon.png"/>
    <link href="/fonts/fonts.css" rel="stylesheet">

    <style>
        body { background: #303030; }
    </style>

    {{#if htmlWebpackPlugin.options.isDevelopment}}
        {{#if htmlWebpackPlugin.options.isOffline}}
            <script src="/libs/pep.js"></script>
            <script src="/libs/three.js"></script>
        {{else}}
            <script src="https://code.jquery.com/pep/0.4.3/pep.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/three@0.117.1/build/three.js"></script>
        {{/if}}
    {{else}}
        {{#if htmlWebpackPlugin.options.isOffline}}
            <script src="/libs/pep.min.js"></script>
            <script src="/libs/three.min.js"></script>
        {{else}}
            <script src="https://code.jquery.com/pep/0.4.3/pep.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/three@0.117.1/build/three.min.js"></script>
        {{/if}}
    {{/if}}

</head>
<body>
{{{htmlWebpackPlugin.options.element}}}
</body>
</html>